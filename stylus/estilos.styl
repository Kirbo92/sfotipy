@import "nib"
@import "normalize.styl"
@import "iconfonts.styl"

vendor-prefixes = webkit o ms moz official
// animacion(parametro)
// 	-webkit-animation parametro

gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #F0F0F0
rojo = #BD255B


a
	text-decoration none
body
	font-size 16px
	font-family 'Varela Round', sans-serif
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
.action
	color white
	font-size 1.2em
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_oscuro
.actions
	background rgba(black, .3)
	bottom 0
	left 0
	position absolute
	right 0
.author
	color gris_claro
.avatar
	width 38px
	height 38px
.border-bottom
	border-bottom 1px solid gris_claro
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%
.center-block
	margin 0 auto
.center-text
	text-align center
.close-icon
	position absolute
	top .5em
	color gris_claro
	right .5em
	font-size 1.2em
.container
	font-size 0
	padding 1.4rem
	text-align center
.header
	height 3.5em
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.input
	border 1px solid gris_claro
	border-radius 5px
	height 2.5em
	padding 0 1em 0 2em
.left
	float left
.logo
		display none
		padding 1.3em 0
		overflow hidden
		background white
.logotipo
		img
			width 7em	
.menu
	display none
.name
	color gris_oscuro
.padding
	padding 1em
.playing
	&.small
		margin 0 auto
		width 20em
.playlist
	display none
	width 22em
	padding 0 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size .8em
.progress
	margin 1em 0
	position relative
	.circle
		width 10px
		height 10px
		background gris_oscuro
		border-radius 50%
		position absolute
		right 0
		top -2px
		animation 1s circle infinite
	.max
	.min
		font-size .8em
		position absolute
		top -5px
	.max
		right 0
	.min
		left 0
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
		position relative
		animation 20s state infinite linear
	
.relative //oocss
	position relative
.right
	float right
.right-text
	text-align right
.round
	border-radius 50%
	overflow hidden
.search-icon
	position absolute
	left .5em
	top .8em
	color gris_claro
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	&:nth-child(even)
		margin 0
	p
		margin .5em 0
.user
		margin-left 1em
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	&:after
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em
.wrap
	width 62.5em

@keyframes state
	from
		width 0
	to
		width 100%
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0

@media screen and (min-width:480px)
	.image
		img
			width 100%
			height auto

	.playing
		&.medium
			width auto
	.song
		&:nth-child(even)
			margin-right 1em

@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.header
		border none
		height auto
		.button-menu
		.title
			display none
	
	.menu
		border-top 1px solid gris_claro
		display block
		overflow hidden
		.item
			float left
			list-style none
			a
				border-top 5px solid transparent
				color gris_oscuro
				cursor pointer
				display inline-block
				padding 1em
				text-transform uppercase
				transition .3s border-top
				&:hover
					border-top 5px solid gris_claro
	.music
		width 32.5em
		float left
		.description
			display none
	.logo
		display block
	.playing
		padding-top .8em
		&.large
			overflow hidden
			width 62.5em
	.playlist
		display block
	
	 






